{
  "name": "@mchen-lab/app-kit",
  "version": "0.1.11",
  "description": "Standard Application Shell for the News Workspace Fleet",
  "license": "MIT",
  "type": "module",
  "main": "dist/backend/index.js",
  "bin": {
    "app-kit": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "templates",
    "libs"
  ],
  "exports": {
    "./backend": {
      "types": "./dist/backend/index.d.ts",
      "default": "./dist/backend/index.js"
    },
    "./frontend": {
      "types": "./dist/frontend/index.d.ts",
      "default": "./dist/frontend/index.js"
    },
    "./components": {
      "types": "./dist/frontend/components.d.ts",
      "default": "./dist/frontend/components.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run package-lib",
    "package-lib": "mkdir -p libs && rm -f *.tgz && npm pack && mv mchen-lab-app-kit-*.tgz libs/app-kit.tgz",
    "release": "./release.sh",
    "test": "vitest run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "nconf": "^0.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.18",
    "@types/node": "^20.8.0",
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "typescript": "^5.2.2",
    "vitest": "^4.0.18"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
